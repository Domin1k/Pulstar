@model IEnumerable<ProductModel>
@{ 
    ViewBag.CartTitle = "Cart";
}
<h2>@ViewBag.CartTitle</h2>

@if (Model.Any())
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cartItem in Model)
            {
                <tr class="active">
                    <td>TODO</td>
                    <td>@cartItem.Title</td>
                    <td>@cartItem.Quantity</td>
                    <td>@cartItem.Price EUR</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-area="" asp-controller="Users" asp-action="Checkout" class="btn btn-success">Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}