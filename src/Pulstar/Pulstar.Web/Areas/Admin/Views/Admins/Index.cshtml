@model IEnumerable<ManageUserViewModel>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <select class="roles-selectList" id="@user.UserName" asp-items="@user.Roles" selected="selected"></select>
                </td>
                <td>
                    @Html.Partial("_AddToRole", new AddToRoleModel { UserName = user.UserName, Role = user.Role })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
<script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(function () {
            $(".roles-selectList").change(function () {
                $(".role-input").val($(this).find("option:selected").text());
            })
        })
    </script>
}