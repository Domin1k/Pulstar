@model IEnumerable<ManageUserViewModel>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr >
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <select asp-for="@user.Role" asp-items="@user.Roles" selected="selected"></select>
                </td>
                <td>
                <a 
                   class="btn btn-warning"
                   asp-area="Admin"
                   asp-controller="Admins"
                   asp-action="Manage"
                   asp-route-userName="@user.UserName"
                   asp-route-role="@user.Role">
                    Add To Role
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>